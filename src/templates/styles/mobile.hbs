<style>
    {{! Generic computed styles }}

    @media (max-width: 768px) {
        .planner-container.planner-column {
            margin-right: 5px;
        }

        .planner-header.planner-column-header {
            margin-right: 5px;
        }

        .planner-timeslots {
            padding-right: 5px;
        }

        .planner-card-drag {
            display: none;
        }
    }

    {{! In portrait should always be one column }}

    @media (max-width: 768px) and (orientation: portrait) {
        .planner-container.planner-column {
            width: 100%;
        }

        .planner-header.planner-column-header {
            width: 100%;
        }

        .planner-slider {
            width: 100%;
        }
    }

    {{! In landscape should use users preference }}

    @media (max-width: 768px) and (orientation: landscape) {
        .planner-container.planner-column {
            width: {{mobileWidth}}%;
        }

        .planner-header.planner-column-header {
            width: {{mobileWidth}}%;
        }

        .planner-slider {
            width: {{mobileWidth}}%;
        }
    }
</style>
