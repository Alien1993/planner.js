<style>
    {{! Column computed styles }}

    .planner-column > div {
        height: {{timeslotHeight}}px;
    }

    .planner-column > div:nth-child({{timeslots}}n) {
        border-bottom: 2px solid #cccccc;
    }

    {{! Timeslot computed styles }}

    .planner-timeslots > div:not(:first-child) {
        padding-top: {{timeslotPadding}}px;
    }

    .planner-timeslots > div:last-child {
        padding-bottom: {{lastTimeslotPadding}}px;
    }

    {{! Plugins computed styles }}

    {{#if interaction }}
    div.planner-card > .planner-card-drag {
        text-align: center;
        font-size: 10px;
        bottom: 1px;
        position: absolute;
        right: 50%;
        cursor: ns-resize;
    }

    div.planner-card.resizable {
        cursor: ns-resize;
    }
    {{/if}}
</style>
