{{! List of computed styles }}

.column > div:not(:first-child) {
    height: {{rowHeight}}px;
}

{{#if textAlignment}}
    .planner-timeslots > div {
        padding-top: {{topPadding}}px;
    }
{{/if}}

.planner-timeslots > div:not(:first-child) {
    padding-top: {{rowPadding}}px;
}

.planner-timeslots > div:last-child {
    padding-bottom: {{rowPaddingBottom}}px;
}

.column > div:nth-child({{timeslots}}n+1):not(:first-child) {
    border-bottom: 2px solid #cccccc;
}
